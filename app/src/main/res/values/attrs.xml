<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 无边框-->
        <!--<item name="android:backgroundDimAmount">0.5</item>-->
        <item name="android:windowIsFloating">true</item> <!-- 悬浮在Activity之上 -->

        <item name="android:windowNoTitle">true</item>  <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item><!--动画-->

    </style>

    <declare-styleable name="SpecialProgressBarStyle">
        <attr name="textSize" format="dimension|reference"/><!-- 字体大小 -->
        <attr name="textColorSuccess" format="color|reference"/><!-- 成功字体颜色 -->
        <attr name="textColorNormal" format="color|reference"/><!-- 默认进度字体颜色 -->
        <attr name="textColorError" format="color|reference"/><!-- 错误失败字体颜色 -->
        <attr name="startDrawable" format="integer|reference"/><!-- 内部图片 -->
        <attr name="endSuccessDrawable" format="integer|reference"/><!-- 成功图片 -->
        <attr name="progressBarHeight" format="dimension|reference"/><!--进度条高度 -->
        <attr name="progressBarBgColor" format="color|reference"/><!--进度条背景颜色 -->
        <attr name="progressBarColor" format="color|reference"/><!--进度条颜色 -->
        <attr name="canReBackable" format="boolean|reference"/><!-- 是否成功后返回-->
        <attr name="canDragable" format="boolean|reference"/><!-- 是否可以拖拽-->
    </declare-styleable>


    <!--顶部标题栏统一样式-->
    <declare-styleable name="IndexTitleStyle" >
        <attr name="leftBackground" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="leftTextColor" format="color" />

        <attr name="middleText" format="string" />
        <attr name="middleTextColor" format="color" />

        <attr name="rightBackground" format="reference" />
        <attr name="rightText" format="string" />
        <attr name="rightTextColor" format="color" />

        <attr name="layoutBackground" format="reference" />

    </declare-styleable>

    <!--水波纹动画统一样式-->
    <declare-styleable name="WaveView" >

        <attr name="waveleLength" format="dimension" />
        <attr name="rise" format= "boolean"  />
        <attr name="boatBitmap" format="reference" />
        <attr name="originY" format="dimension" />
        <attr name="waveHeight" format="dimension" />
        <attr name="duration" format="dimension"  />
    </declare-styleable>

    <!--描述数音量大小的View样式-->
    <declare-styleable name="VoiceStyle">
        <attr name="middlerLineHeight" format="dimension" />
        <attr name="middlerLineColor" format="color" />
        <attr name="voiceLineColor" format="color" />
        <attr name="sensibility">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
        </attr>
        <attr name="maxVolume" format="integer" />
        <attr name="fineness" >
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="file" value="5" />
            <enum name="six" value="6" />
            <enum name="seven" value="7" />
        </attr>
        <attr name="minVolume" format="dimension" />
        <attr name="lineSpeed" format="dimension" />
    </declare-styleable>

</resources>