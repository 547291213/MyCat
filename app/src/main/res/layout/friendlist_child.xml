<?xml version="1.0" encoding="utf-8"?>
<Sandroid:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Sandroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="50dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ib_childImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="10dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_childNameText"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_childSingnatureText"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true" />

    </LinearLayout>

</Sandroid:LinearLayout>