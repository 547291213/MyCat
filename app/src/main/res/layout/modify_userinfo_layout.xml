<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.xkfeng.mycat.DrawableView.UserInfoScrollView
            android:id="@+id/uisv_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/rl_imageBkLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_userinfoImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_userinfo" />


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_userinfoHeaderImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/log"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FF000000"
                    android:layout_below="@id/iv_userinfoImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-90dp"

                    />

                <TextView
                    android:id="@+id/tv_userNikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MyCat"
                    android:textSize="26sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@id/iv_userinfoHeaderImage"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tv_signatureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:text="@string/nav_header_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@id/tv_userNikeName"
                    android:layout_centerHorizontal="true"

                    />





            </RelativeLayout>





        </com.example.xkfeng.mycat.DrawableView.UserInfoScrollView>
    </RelativeLayout>


    <com.example.xkfeng.mycat.DrawableView.IndexTitleLayout
        android:id="@+id/indexTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftBackground="@drawable/back_blue"

        android:visibility="invisible"
        />

