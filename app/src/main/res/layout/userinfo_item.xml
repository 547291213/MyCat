<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_userInfoMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.example.xkfeng.mycat.DrawableView.UserInfoScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fillViewport="true"
            android:overScrollMode="never"
            >

            <RelativeLayout
                android:id="@+id/rl_imageBkLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_userinfoImgBgLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/iv_userinfoImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_userinfo"
                        android:adjustViewBounds="true"
                        />


                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_userinfoHeaderImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/log"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FF000000"
                    android:layout_below="@id/ll_userinfoImgBgLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-90dp"

                    />

                <TextView
                    android:id="@+id/tv_userNikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MyCat"
                    android:textSize="26sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@id/iv_userinfoHeaderImage"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tv_signatureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:text="@string/nav_header_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_below="@id/tv_userNikeName"
                    android:layout_centerHorizontal="true"

                    />


                <TextView
                    android:id="@+id/tv_userInfoUserName"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:textSize="20sp"
                    android:drawablePadding="20dp"
                    android:text="Xkfeng"
                    android:textColor="@android:color/black"
                    android:drawableLeft="@drawable/account"
                    android:layout_below="@id/tv_signatureTextView"
                    />


                <TextView
                    android:id="@+id/tv_userInfoUserSex"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:textSize="20sp"
                    android:drawablePadding="20dp"
                    android:text="男"
                    android:textColor="@android:color/black"
                    android:drawableLeft="@drawable/sex"
                    android:layout_below="@id/tv_userInfoUserName"
                    android:drawableRight="@drawable/bigger"
                    />


                <TextView
                    android:id="@+id/tv_userInfoUserBirthday"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:textSize="20sp"
                    android:drawablePadding="20dp"
                    android:text="1997-01-02"
                    android:textColor="@android:color/black"
                    android:drawableLeft="@drawable/brithday"
                    android:layout_below="@id/tv_userInfoUserSex"
                    android:drawableRight="@drawable/bigger"
                    />

                <TextView
                    android:id="@+id/tv_userInfoUserCity"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:textSize="20sp"
                    android:drawablePadding="20dp"
                    android:text="重庆"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/black"
                    android:drawableLeft="@drawable/city_gray"
                    android:layout_below="@id/tv_userInfoUserBirthday"
                    android:drawableRight="@drawable/bigger"
                    />

                <TextView
                    android:id="@+id/tv_userInfoUserLastUpdate"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:textSize="20sp"
                    android:drawablePadding="20dp"
                    android:text="2018-11-08 16:50:32"
                    android:textColor="@android:color/black"
                    android:drawableLeft="@drawable/clock"
                    android:layout_below="@id/tv_userInfoUserCity"
                    android:drawableRight="@drawable/bigger"

                    />




            </RelativeLayout>






        </com.example.xkfeng.mycat.DrawableView.UserInfoScrollView>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>