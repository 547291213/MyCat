<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_red"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tv_setBackText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:drawableLeft="@drawable/ic_back_white_16"
            android:gravity="left|center_vertical"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_intoAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="MyCat"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_intoAboutUs"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/log" />

    </LinearLayout>

    <android.support.v7.widget.SearchView
        android:id="@+id/sv_searchContact"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >


    </android.support.v7.widget.SearchView>

    <TextView
        android:id="@+id/tv_noNetWork"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="您当前处于无网络状态，请您连接网络再试"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/red"
        android:drawableLeft="@drawable/ic_warning_red_32"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ll_friendInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_nocolor"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="联系人"
            android:textColor="@color/light_red"
            android:textSize="20sp" />

        <com.example.xkfeng.mycat.DrawableView.NestedListView
            android:id="@+id/nlv_friendLsit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </com.example.xkfeng.mycat.DrawableView.NestedListView>

        <LinearLayout
            android:id="@+id/ll_getMoreContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_gravity="center"
            android:background="@color/lighter_gray"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取更多联系人信息"
                android:textColor="@color/light_red"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_groupInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_nocolor"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="群组"
            android:textColor="@color/light_red"
            android:textSize="20sp" />

        <com.example.xkfeng.mycat.DrawableView.NestedListView
            android:id="@+id/nlv_groupLsit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </com.example.xkfeng.mycat.DrawableView.NestedListView>

        <LinearLayout
            android:id="@+id/ll_getMoreGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取更多群组信息"
                android:textColor="@color/light_red"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/ac_tv_search_no_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="45dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="14sp"
            android:visibility="gone"
            />

    </LinearLayout>



</LinearLayout>


