<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/ll_otherItem"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_other"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/pic_selected_drawable"
            android:button="@null"/>

        <ImageView
            android:id="@+id/iv_other"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="13.33dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_condense_blue_48"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="11.67dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_otherTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="#2C2C2C"
                android:ellipsize="middle"
                />

            <TextView
                android:id="@+id/tv_otherSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/tv_otherDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#999999"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="#D9D9D9" />

</LinearLayout>