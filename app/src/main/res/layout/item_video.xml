<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_videoItem"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/default_linear_layout_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_video"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/pic_selected_drawable"
            android:button="@null" />

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="13.33dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_video_blue_48" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="11.67dp">

            <TextView
                android:id="@+id/tv_videoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#2C2C2C"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_videoSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_videoDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#D9D9D9" />

</LinearLayout>