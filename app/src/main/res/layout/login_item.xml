<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/bt_loginItemBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/show"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_layoutItem"
        android:layout_below="@id/til_user"
        android:layout_toLeftOf="@id/bt_loginItemBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:errorEnabled="true"
        >

        <com.example.xkfeng.mycat.DrawableText.DrawableTextEdit
            android:id="@+id/tiet_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </android.support.design.widget.TextInputLayout>


</RelativeLayout>
