<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/ll_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="5dp"

        >
        
        <Button
            android:id="@+id/bt_searchBtn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:hint="搜索"
            />

        <EditText
            android:id="@+id/et_searchEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="搜索内容"
            android:layout_toLeftOf="@id/bt_searchBtn"
            android:maxLines="1"
            android:maxLength="15"

            />

    </RelativeLayout>

    <LinearLayout
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_searchRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        >
    </android.support.v7.widget.RecyclerView>

    <com.example.xkfeng.mycat.DrawableView.NestedListView
        android:id="@+id/nlv_FriendAndGroupList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.xkfeng.mycat.DrawableView.NestedListView>

    <TextView
        android:id="@+id/tv_findNothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:visibility="gone"

        />

</LinearLayout>
