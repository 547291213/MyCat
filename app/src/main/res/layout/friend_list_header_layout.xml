<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lighter_gray"
    >
    <LinearLayout
        android:id="@+id/ll_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/light_red"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <TextView
            android:id="@+id/tv_setBackText"
            android:layout_height="32dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="返回"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_back_white_16"
            android:gravity="left|center_vertical"
            />

        <ImageView
            android:id="@+id/iv_addFriendImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:layout_marginRight="8dp"
            android:layout_gravity="right|center_vertical"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/et_searchEdit"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="搜索"
        android:textSize="16sp"

        />

    <LinearLayout
        android:id="@+id/ll_validationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证消息"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/bigger"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/friend_setting_layout_drawable"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/white"
        />
    <LinearLayout
        android:id="@+id/ll_groupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="群组"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:drawableRight="@drawable/bigger"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/friend_setting_layout_drawable"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/white"
        />

</LinearLayout>
